<div class="grid grid-cols-12 gap-0 mt-4">
  <div
    class="col-start-2 col-span-10 lg:col-start-4 lg:col-span-6 2xl:col-start-5 2xl:col-span-4"
  >
    <form
      class="bg-zinc-300 border border-zinc-400 p-2 m-4 mt-0"
      id="newfeed-form"
    >
      <div class="p-2">
        <label for="feedurl-input" class="block">Feed Url:</label>
        <input type="text" class="p-1 w-full" id="feedurl-input" />
      </div>
      <div class="p-2">
        <label for="description-input" class="block">Description:</label>
        <textarea class="p-1 w-full" id="description-input"></textarea>
      </div>
      <p class="p-2 text-rose-700" id="error-text">
        <br />
      </p>
      <div class="flex justify-center">
        <button
          class="p-2 bg-zinc-400 border border-bg-zinc-600 hover:bg-green-400"
          id="newfeedbutton"
        >
          Add New Feed
        </button>
      </div>
    </form>
  </div>
</div>

<div class="grid grid-cols-12 gap-0" id="feeds">
  {{#each feeds as |feed|}}
    <div
      class="col-start-2 col-span-10 lg:col-start-4 lg:col-span-6 2xl:col-start-5 2xl:col-span-4"
    >
      <div class="mx-4 mb-0 flex justify-end">
        <button
          class="editFeed p-1 bg-zinc-400 border border-bg-zinc-600 hover:bg-amber-400"
          data-id="{{feed.id}}"
        >
          Edit
        </button>
        <button
          class="deleteFeed p-1 bg-zinc-400 border border-bg-zinc-600 hover:bg-rose-600"
          data-id="{{feed.id}}"
        >
          Delete
        </button>
      </div>
      <div class="bg-zinc-300 border border-zinc-400 m-4 mt-0">
        <div class="break-all p-2 bg-zinc-400">
          {{feed.url}}
        </div>
        <div class="p-2" id="feedDescription-{{feed.id}}">
          {{feed.description}}
        </div>
      </div>
    </div>
  {{/each}}
</div>

<script src="/javascript/feed.js"></script>