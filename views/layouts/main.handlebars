<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Little Feeder</title>
  </head>
  <body>
    <header class="bg-zinc-700 text-white p-2">
      <h1 class="p-2 ml-2 pb-0">Little Feeder</h1>
      <nav class="p-1 m-1">
        <button class="border p-1 m-2 hover:bg-zinc-600 border-zinc-400">
          <a href="/article">Articles</a>
        </button>
        <button class="border p-1 m-2 hover:bg-zinc-600 border-zinc-400">
          <a href="/feed">Feeds</a>
        </button>
        {{#if loggedIn}}
          <button
            id="logout"
            class="border p-1 m-2 hover:bg-zinc-600 border-zinc-400"
          >
            Logout
          </button>
        {{/if}}
      </nav>
    </header>
    <main class="flex flex-col h-screen bg-zinc-100">
      {{{body}}}
    </main>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>
</html>